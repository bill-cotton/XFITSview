/*  Constructor  */ 
  FITShead* MakeFITShead() 
{ 
  Integer i; 
  FITShead *this = (FITShead *) malloc (sizeof(FITShead)); 
  this->naxes = 0; 
  this->valid = 0; 
  this->next_key=0; 
  this->next_el=0; 
  for (i=0; i<20; i++)  /* init arrays */ 
    {this->sarray[i] = MakeString("        "); 
     this->farray[i] = 0; this->darray[i]=0.0; this->iarray[i]=0; 
     this->larray[i] = 0;} 
     this->number = 0;    /* The number of recognized keywords.  */ 
  
  for (i=0; i<50; i++) this->keywords[i] = NULL; 
  for (i=0; i<50; i++) this->keydim[i] = 0; 
/*  The following required keywords should be at the start in this order.  */ 
  this->keywords[this->number] = MakeString ("SIMPLE  "); 
  this->keytype[this->number++] = FLOGICAL; 
  
  this->keywords[this->number] = MakeString ("BITPIX  "); 
  this->keytype[this->number++] = FINTEGER; 
  
  this->keywords[this->number] = MakeString ("NAXIS   "); 
  this->keytype[this->number++] = FINTEGER; 
  
  this->keywords[this->number] = MakeString ("NAXIS?  "); 
  this->keytype[this->number++] = FINTEGER; 
  
  /*Following are optional keywords.  */ 
  
  this->keywords[this->number] = MakeString ("CRVAL?  "); 
  this->keytype[this->number++] = FDOUBLE; 
  
  this->keywords[this->number] = MakeString ("CTYPE?  "); 
  this->keytype[this->number++] = FSTRING; 
  
  this->keywords[this->number] = MakeString ("CRPIX?  "); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("CDELT?  "); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("CROTA?  "); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("BLANK   "); 
  this->keytype[this->number++] = FINTEGER; 
  
  this->keywords[this->number] = MakeString ("ORIGIN  "); 
  this->keytype[this->number++] = FSTRING; 
  
  this->keywords[this->number] = MakeString ("DATAMAX "); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("DATAMIN "); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("EPOCH   "); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("EQUINOX "); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("BSCALE  "); 
  this->keytype[this->number++] = FDOUBLE; 
  
  this->keywords[this->number] = MakeString ("BZERO   "); 
  this->keytype[this->number++] = FDOUBLE; 
  
  this->keywords[this->number] = MakeString ("OBJECT  "); 
  this->keytype[this->number++] = FSTRING; 
  
  this->keywords[this->number] = MakeString ("DATE-OBS"); 
  this->keytype[this->number++] = FSTRING; 
  
  this->keywords[this->number] = MakeString ("BUNIT   "); 
  this->keytype[this->number++] = FSTRING; 

/* following for perverted DSS headers */
  this->keywords[this->number] = MakeString ("PLTSCALE"); 
  this->keytype[this->number++] = FFLOAT; 

  this->keywords[this->number] = MakeString ("CNPIX?  "); 
  this->keydim[this->number] = 2;
  this->keytype[this->number++] = FINTEGER; 
  
  this->keywords[this->number] = MakeString ("XPIXELSZ"); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("YPIXELSZ"); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("PPO?    "); 
  this->keydim[this->number] = 6;
  this->keytype[this->number++] = FDOUBLE; 
  
  this->keywords[this->number] = MakeString ("AMDX?   "); 
  this->keydim[this->number] = 20;
  this->keytype[this->number++] = FDOUBLE; 
  
  this->keywords[this->number] = MakeString ("AMDY?   "); 
  this->keydim[this->number] = 20;
  this->keytype[this->number++] = FDOUBLE; 
  
  this->keywords[this->number] = MakeString ("OBJCTRA "); 
  this->keytype[this->number++] = FSTRING; 
  
  this->keywords[this->number] = MakeString ("OBJCTDEC"); 
  this->keytype[this->number++] = FSTRING; 
  
  this->keywords[this->number] = MakeString ("OBJCTX  "); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("OBJCTY  "); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("PLTLABEL"); 
  this->keytype[this->number++] = FSTRING; 
  
  this->keywords[this->number] = MakeString ("PLTRAH  "); 
  this->keytype[this->number++] = FINTEGER; 
  
  this->keywords[this->number] = MakeString ("PLTRAM  "); 
  this->keytype[this->number++] = FINTEGER; 
  
  this->keywords[this->number] = MakeString ("PLTRAS  "); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("PLTDECSN"); 
  this->keytype[this->number++] = FSTRING; 
  
  this->keywords[this->number] = MakeString ("PLTDECD "); 
  this->keytype[this->number++] = FINTEGER; 
  
  this->keywords[this->number] = MakeString ("PLTDECM "); 
  this->keytype[this->number++] = FINTEGER; 
  
  this->keywords[this->number] = MakeString ("PLTDECS "); 
  this->keytype[this->number++] = FFLOAT; 
  
/* following for heretical IRAF headers */
  this->keywords[this->number] = MakeString ("IRAF-MAX"); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("IRAF-MIN"); 
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("CD1_?   "); 
  this->keydim[this->number] = 2;
  this->keytype[this->number++] = FFLOAT; 
  
  this->keywords[this->number] = MakeString ("CD2_?   "); 
  this->keydim[this->number] = 2;
  this->keytype[this->number++] = FFLOAT; 
  
  /*  The following should always stay at the end  */ 
  this->keywords[this->number] = MakeString ("END     "); 
  this->keytype[this->number++] = NOSAVE; 
  return this; 
} /* end MakeFITShead */ 
  
/* Destructor  */ 
  void  KillFITShead(FITShead *this) 
{ 
  Integer i; 
  if (!this) return;  /* anybody home? */ 
/* kill strings */ 
  for (i=0; i<50; i++) KillString(this->keywords[i]); 
  for (i=0; i<20; i++) KillString(this->sarray[i]); 
  free (this); 
}  /* end KillFITShead */ 
  
  
Integer eat_card(FITShead *this, FStrng *card, InfoList *ilist) 
/*  parse card and update info list, returns 0 for success,  */ 
/*  1 when reached "END" card else failed.  */ 
{char tstring[81]; 
 Integer key, num_check, key_num, i, j, array_number=0, array_dim, t_dim; 
 Logical  is_array, test; 
 Integer isave = 0; 
 Logical lsave = 0; 
 double dsave = 0.0; 
 float fsave = 0.0; 
 size_t nc; 
 char ssave[80]; 
 char value[81]; 
 Integer  olderr, ierr, iout, lenvalue, indim, idim[20], type; 
 Integer first_quote = -1, last_quote=-1; 
 Logical inquote=0;                     /* Find start of comment  */ 
  
 if (!this) return 1; /* validity check */
 if (!card) return 1; /* validity check */
 if (!ilist) return 1; /* validity check */
/*  Check validity and get array dimension  */ 
 if (!valid_check(this, card, &array_dim)) return -1; 
/*  Search list for keyword  */ 
 for (key=0; key<this->number; key++) 
     {num_check = StringFind_char(this->keywords[key], '?'); 
      is_array = (num_check >= 0);  /* Is this an array?  */ 
      if (num_check<0) num_check = 8;  /*  Check 8 char if not an array  */ 
      key_num = key; nc = num_check; 
      test = !strncmp(card->sp, this->keywords[key]->sp, nc); 
      if (test) break;}  /*  End of keyword search loop  */ 
 /*  Process unknown keywords  */ 
 if (!test) {unknown_keywords(card); return 0;} 
 /* check for "END" card  */ 
 nc=8; 
 if (!strncmp (card->sp, "END     ", nc)) return 1; 
 /* Don't save some special keywords  */ 
 test = test && (this->keytype[key_num] != NOSAVE); 
 if (!test) return 0; 
 array_number = 0; 
 t_dim = array_dim;  /* array dimension - header or other */
 if (this->keydim[key_num]>0) t_dim = this->keydim[key_num];

/*  If found add to InfoList  */ 
  if (test) 
    {j = 0; 
     if (is_array)   /*  If an array element parse the number.  */ 
       {for (i=num_check; i<8; i++) {tstring[j] = card->sp[i]; j++;} 
	tstring[j] = 0; 
	sscanf (tstring, "%i", &array_number); 
	if (array_number<1) array_number = 1; 
	if (array_number>t_dim) array_number = t_dim; 
	array_number = array_number - 1;}    /* 0-rel array index.  */ 
  
/*  Extract value from card image  */ 
     lenvalue = 0; 
/*  Extract value field from card.  */ 
     inquote=0;                     /* Find start of comment  */ 
     for (i=10; i<80; i++)          /* Copy value field to value  */ 
	 {if (card->sp[i] == '\'') inquote = !inquote; 
	  if ((card->sp[i] == '/') && !inquote) 
	      break;                        /* Look for comment delimiter  */ 
	value[lenvalue++] = card->sp[i];} 
     value[lenvalue] = 0; 
/* Fetch old InfoList entry if it exists and extract this element from value.*/ 
     if (!is_array) t_dim = 1; 
     switch (this->keytype[key_num])          /* save by data type  */ 
       {case NOSAVE:                          /*  This type is not saved  */ 
	 break; 
       case FDOUBLE: 
	 olderr = InfoLookup(ilist, this->keywords[key_num]->sp, &type, 
			     &indim, idim, (char*)this->darray); 
/* possible trouble with sscanf reading double */ 
         sscanf (value, "%le", &dsave); 
	 if (olderr!=0)   /* Initialize new array  */ 
	     {indim = 1; idim[0] = t_dim; 
	      for (i=0; i<idim[0]; i++) this->darray[i] = 0.0;} 
	 this->darray[array_number] = dsave; 
	 ierr = InfoStore(ilist, this->keywords[key_num]->sp, FDOUBLE, 
				indim, idim, (char*)this->darray); 
	 break; 
       case FFLOAT: 
	 olderr = InfoLookup(ilist, this->keywords[key_num]->sp, &type, 
			     &indim, idim, (char*)this->farray); 
	 sscanf (value, "%e", &fsave); 
	 if (olderr!=0)   /* Initialize new array  */ 
	     {indim = 1; idim[0] = t_dim; 
	     for (i=0; i<idim[0]; i++) this->farray[i] = 0.0;} 
	 this->farray[array_number] = fsave; 
	 ierr = InfoStore(ilist, this->keywords[key_num]->sp, FFLOAT, indim, 
			  idim, (char*)this->farray); 
	 break; 
       case FSTRING: 
	 olderr = InfoLookup(ilist, this->keywords[key_num]->sp, &type, 
			     &indim, idim, (char*)this->sarray); 
	 first_quote = -1; 
	 last_quote=-1; 
	 for (i=0;i<lenvalue;i++) 
	   { if ((value[i]=='\'') && (first_quote!=-1)) last_quote = i; 
	     if ((value[i]=='\'') && (first_quote==-1)) first_quote = i;} 
	 iout=0; 
	 for (i=first_quote+1;i<last_quote;i++) ssave[iout++] = value[i]; 
	 ssave[iout]=0; 
	 if (olderr!=0)   /* Initialize new array  */ 
	     {indim = 1; idim[0] = t_dim;} 
	 StringFill(this->sarray[array_number], ssave); 
	 ierr = InfoStore(ilist, this->keywords[key_num]->sp, FSTRING, indim, 
				idim, (char*)this->sarray); 
	 break; 
       case FINTEGER: 
	 olderr = InfoLookup(ilist, this->keywords[key_num]->sp, &type, 
			     &indim, idim, (char*)this->iarray); 
	 sscanf (value, "%li", &isave); 
	 if (olderr!=0)   /* Initialize new array  */ 
	     {indim = 1; idim[0] = t_dim; 
	      for (i=0; i<idim[0]; i++) this->iarray[i] = 0;} 
	 this->iarray[array_number] = isave; 
	 ierr = InfoStore(ilist, this->keywords[key_num]->sp, FINTEGER, 
			  indim, idim, (char*)this->iarray); 
	 break; 
       case FLOGICAL:                  /* Look for T else false.  */ 
	 olderr = InfoLookup(ilist, this->keywords[key_num]->sp, &type, 
			     &indim, idim, (char*)this->larray); 
	 lsave = 0; 
	 for (i=0; i<80; i++) 
	   {if (value[i]== '/') break; /* Comment delimiter  */ 
	    if (value[i]=='T') {lsave = 1; break;}} 
	 if (olderr!=0)   /* Initialize new array  */ 
	     {indim = 1; idim[0] = t_dim; 
	     for (i=0; i<idim[0]; i++) this->larray[i] = 0;} 
	 this->larray[array_number] = lsave; 
	 ierr = InfoStore(ilist, this->keywords[key_num]->sp, FLOGICAL, 
			  indim, idim, (char*)this->larray); 
	 break; };    /* End of type specific update of InfoList  */ 
     if (ierr!=0)           /*  Error check  */ 
        {sprintf (szErrMess, "FITShead:eat_card: Error %d updating InfoList", 
		  ierr); 
	 ErrorMess(szErrMess); 
	  return -1;} 
 } /*   End of update of InfoList  */ 
 /*  Any special processing of card  */ 
 check_card(this, this->keywords[key_num], array_number, card, dsave, 
	    fsave, ssave, isave, lsave); 
 return 0;}   /* End of eat_card  */ 
  
/* Validity check at start of eat_card. 1=OK, 0=failed  */ 
Integer valid_check(FITShead *this, FStrng *card, Integer *array_dim) 
{/* validity check if "SIMPLE = T" hasn't been found this better be it  */ 
  size_t nc=15; 
 if (!this) return 0; /* validity check */
 if (!card) return 0; /* validity check */
 if (!array_dim) return 0; /* validity check */
  *array_dim = this->naxes;  /* Only one kind of array for an Image.  */ 
    if (!this->valid) 
	{if (!strncmp (card->sp, "SIMPLE  =      ", nc)) 
	     {/* look for "     T"  */ 
              if (strstr(card->sp, "     T")) 
                 {this->valid = 1; return 1;}} 
	else 
	  {sprintf (szErrMess, 
		    "FITShead::valid_check: Invalid FITS (no SIMPLE = ... T)"); 
	   ErrorMess(szErrMess); 
	   return 0 ;}} 
  return 1; 
}  /*  End of valid_check  */ 
  
/* Process unknown keywords  */ 
void unknown_keywords(FStrng *card) 
{/* ignore  */ 
} 
  
/* Final processing of card values  */ 
void check_card(FITShead *this, FStrng *keyword, Integer array_number, 
   FStrng *card, double dsave, float fsave, char *csave, Integer isave, 
   Logical lsave) 
/*   Trap some special keywords and save values.  */ 
{ 
   if (!this) return; /* validity check */
   if (!strncmp (keyword->sp,"NAXIS   ",8)) this->naxes = isave; 
  }  /* end check_card */ 
  
/*  Has the header been read successfully?  */ 
/*  Returns 1 if a valid header read else 0  */ 
Integer got_head(FITShead *this) 
{
  if (!this) return 0; /* validity check */
  return this->valid;} 
